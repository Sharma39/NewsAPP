<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">

    <ImageView
        android:id="@+id/i_img_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        tools:srcCompat="@tools:sample/avatars"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/t_text_view"
        android:text="Title"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:elevation="1000dp"
        android:fontFamily="@font/della_respira"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/des_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/della_respira"
        android:layout_margin="10dp"
        android:text="Description"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/t_text_view"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/author_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/della_respira"
        android:text="Author"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/des_view" />

    <TextView
        android:id="@+id/src_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="284dp"
        android:fontFamily="@font/della_respira"
        android:text="Source"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>